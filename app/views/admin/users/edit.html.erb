<div class='container'>
  <%= render 'layouts/errors', obj: @user %>
  <div class='row'>
    <div class ='col'>
      <h2>管理者ユーザー編集</h2>
      <%= form_with model:@user, url: admin_user_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :ユーザーネーム %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, class: "form-control email" %>
        </div>
        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <p>会員ステータス</p>
          <%= f.radio_button :is_deleted, 'false' %>
          <%= f.label :is_deleted, '有効' %>
          <%= f.radio_button :is_deleted, 'true' %>
          <%= f.label :is_deleted, '退会' %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存する", data: { confirm: "変更して宜しいですか？"} , class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class ='col'>
      <h3>登録中エリア一覧</h3>
      <% if @areas.present? %>
        <% @areas.each do |area| %>
          <%= area.prefecture.name %>
        <% end %>
      <% else %>
        <p>現在登録がありません</p>
      <% end %>
    </div>
  </div>

</div>