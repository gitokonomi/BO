  <%= form_with model: [:admin, prefecture], local: true do |f| %>
    <%= f.label :エリア名 %>
    <%= f.text_field :name, class: 'form-control' %>
    <% if params[:id].present? %>
      <%= f.submit "変更を保存", class: 'btn btn-info' %>
    <% else %>
      <%= f.submit "追加", class: 'btn btn-success' %>    
    <% end %>
  <% end %>
