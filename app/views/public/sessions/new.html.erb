<div class="container mt-5">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
      <p style="font-size:23px; text-align:center;">ログイン</p>
    </div>

  </div>
    <div class="row mt-4">
      <div class="col-2"></div>
      <div class="col-3">
        <p style="text-align:center;">会員の方はこちらからログイン</p>
      </div>
    </div>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-2">
      <%= f.label :"メールアドレス" %>
    </div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size:"45x5" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-2">
      <%= f.label :"パスワード" %>
    </div>
    <div class="col-3">
      <%= f.password_field :password, autocomplete: "current-password", size:"45x5" %>
    </div>
  </div>

  <div class="row mt-5 ">
    <div class="col-5"></div>
    <div class="col-2">
      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-5"></div>
    <div class="col-3 mb-5">
      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-block", method: :post %>
    </div>
  </div>

  <% end %>
<hr>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-3">
      <p style="text-align:center;">会員登録がお済みでない方</p>
    </div>
  </div>

  <div class="row mt-2 mb-5">
    <div class="col-3 mb-5"></div>
    <div class="col-4 mb-5">
      <%= render "public/shared/links" %>から新規登録を行ってください。
    </div>
  </div>

</div>

