<h3><<募集一覧>></h3>

<table border="5">

  <thead>
    <tr>
      <td></td>
      <th>タイトル</th>
      <th>場所</th>
      <th>開催日時</th>
      <th>募集締切</th>
      <th>募集内容</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% recruitings.each do |recruiting| %>
      <tr>
        <td>
          <%= link_to(recruiting.user) do %>
            <%= image_tag recruiting.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td><%= link_to recruiting.title, user_path(recruiting.user) %></td>
        <td><%= recruiting.prefecture.name %></td>
        <td><%= recruiting.date %></td>
        <td><%= recruiting.deadline %></td>
        <td><%= recruiting.body %></td>
        <td>
                  <% if recruiting.favorited_by?(current_user) %>
                    <p>
                    <%= link_to recruiting_favorites_path(recruiting), method: :delete do %>
                      ♥<%= recruiting.favorites.count %> いいね
                    <% end %>
                    </p>
                  <% else %>
                    <p>
                    <%= link_to recruiting_favorites_path(recruiting), method: :post do %>
                      ♡<%= recruiting.favorites.count %> いいね
                    <% end %>
                    </p>
                <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>