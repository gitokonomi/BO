<% if recruiting.favorited_by?(current_user) %>
  <%= link_to recruiting_favorites_path(recruiting), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= recruiting.favorites.count %>
  <% end %>
<% else %>
  <%= link_to recruiting_favorites_path(recruiting), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= recruiting.favorites.count %>
  <% end %>
<% end %>