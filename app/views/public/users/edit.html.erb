<div class='container'>
  <div class='row'>
    <div class='col'>

      <h2>マイページ編集</h2>
      <%= form_with model:@user, local:true do |f| %>
        
        <div class="form-group">
          <%= f.label :ユーザーネーム %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, class: "form-control email" %>
        </div>        
        
        <div class="form-group">
          <%= f.label :プロフィール画像 %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        
        <div class="form-group">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        
        <div class="form-group">
          <%= f.label :よく遊ぶ場所 %>
          <%= f.select :area_id, options_from_collection_for_select(@prefectures, :id, :name), class: "form-control area" %>
        </div>
        
        <div class="form-group">
          <%= f.submit "変更を保存する", class: 'btn btn-secondary' %>
        </div>
      
      <% end %>
      
    </div>
  </div>
</div>
