<div class="container mt-3">
  <div class="row mt-3">
    <%= link_to user_path(@user) do %>
      <i class="fa-solid fa-arrow-left fa-2x"></i>
    <% end %>
  </div>
  
  <% unless @favorite_recruitings.present? %>
    <div class="row">
      <h3>いいねした募集はまだありません</h3>
    </div>
  <% else %>

    <div class="row">
      <h3 class="marker_blue">いいねした募集一覧</h3>
    </div>
  
    <div class="recruitings_body">
      <%= render "public/recruitings/list",recruitings: @favorite_recruitings %>
    </div>
    <div class="recruitings_page">
      <%= paginate @favorite_recruitings, theme: 'bootstrap-5' %>
    </div>
  <% end %>
</div>