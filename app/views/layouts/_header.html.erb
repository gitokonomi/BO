<header class="border-bottom bg-header">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <% if admin_signed_in? %>
        <a class="col navbar-brand" href="/admin"><span>B-match</span></a>
      <% else %>
        <a class="col navbar-brand" href="/"><span>B-match</span></a>
      <% end %>
      
      <% if user_signed_in? %>
        <p class="col mb-0">ようこそ<%= current_user.name %>さん</p>
      <% end %>

      <div class="d-flex flex-column mt-2">
        <button class="col-3 align-self-center navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            
          <!--一般会員ログイン時ヘッダーメニュー-->
          <% if user_signed_in? %>
            <li class="text-center mx-2">
              <%= link_to "マイページ", user_path(current_user), class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "募集一覧", recruitings_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ユーザー一覧", users_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "通知一覧", notifications_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ログアウト", destroy_user_session_path,method: :delete, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            
          <!--管理者ログイン時ヘッダーメニュー-->
          <% elsif admin_signed_in? %>
            <li class="text-center mx-2">
              <%= link_to "募集一覧", admin_recruitings_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ユーザー一覧", admin_users_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "エリア一覧・登録", admin_prefectures_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ログアウト", destroy_admin_session_path,method: :delete, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
          
          <!--非ログイン時ヘッダーメニュー-->
          <% else %>
            <li class="text-center mx-2">
              <%= link_to "（仮）管理者ログイン",  new_admin_session_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "About",  about_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "募集一覧", recruitings_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ユーザー登録", new_user_registration_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
            <li class="text-center mx-2">
              <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark border rounded rounded-3 bg-white' %>
            </li>
          <% end %>
          </ul>
        </div>
        
        
        <div class="d-flex flex-row-reverse mt-2">
          <%= render "searches/form" %>
        </div>        
        
      </div>
    </div>
  </nav>
</header>